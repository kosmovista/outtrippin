<div id="destinations">
</div>

<div id="start-contest">
  <div class="row">
    <div class="large-12 columns text-center">
      <h4>Let our travel experts compete to design a honeymoon tailored to your personality</h4>
    </div>
  </div>

  <div class="row">
    <div class="large-10 large-centered columns">
      <div class="row collapse">
        <%= form_for @itinerary do |f| %>
        <div class="large-8 columns">
          <%= f.text_field :destination %>
        </div>
        <div class="large-4 columns">
          <%= f.submit "Blah", class: "button radius expand" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div id="steps">
  <div class="row">
    <div class="large-4 columns">
      <%= image_tag 'marker.png' %>
    </div>
    <div class="large-4 columns">
      <%= image_tag 'idea.png' %>

    </div>
    <div class="large-4 columns">
      <%= image_tag 'calendar.png' %>
    </div>
  </div>
</div>


<%= content_for :head do %>
<%= stylesheet_link_tag "home", media: "all", "data-turbolinks-track" => true %>
<% end %>