<div id="destinations">
  <%= image_tag "loading.gif", id: "loading" %>
  <%= link_to "", "#", id: "left", class: "navigator"  %>
  <%= link_to "", "#", id: "right", class: "navigator"   %>
  <h1 id="header" class="hide-for-small"><%= homepage("header") %></h1>
  <h2 id="header" class="hide-for-medium-up"><%= homepage("header") %></h2>

  <div id="expert-loader">
    <% homepage_pics.each do |p| %>
    <div class="row expert <%= p[0] %>">
      <div class="large-9 columns">
        <h5><%= p[1]["title"] %></h5>
        <p><em>"<%= p[1]["text"] %>"</em> - <strong class="sans"><%= p[1]["expert"] %></strong></p>
      </div>
      <div class="large-3 columns">
        <%= image_tag p[1]["avatar"] %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div id="start-contest">
  <div class="row">
    <div class="large-12 columns text-center">
      <h4 class="subheader text-center"><%= homepage("subheader") %></h4>
    </div>
  </div>

  <div class="row">
    <div class="large-10 large-centered columns">
      <div class="row">
        <%= form_for @itinerary do |f| %>
        <div id="dest" class="large-8 no-margin columns">
          <%= f.text_field :destination, placeholder: homepage("placeholder") %>
          <%= errors_for(@itinerary, :destination) %>

        </div>
        <div class="large-4 no-margin no-padding columns">
          <%= f.submit homepage("submit"), class: "button radius expand" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div id="steps">
  <div class="row">
    <div class="large-12 columns">
      <h3 class="subheader"><%= homepage(["process", "header"]) %>
    </div>
  </div>
  <div class="row">
    <div class="large-4 columns">
      <%= image_tag 'marker.png' %>
      <h4 class="subheader"><%= homepage(["process", "step1", "title"]) %></h4>
      <p><%= homepage(["process", "step1", "text"]) %></p>
    </div>
    <div class="large-4 columns">
      <%= image_tag 'idea.png' %>
      <h4 class="subheader"><%= homepage(["process", "step2", "title"]) %></h4>
      <p><%= homepage(["process", "step2", "text"]) %></p>
    </div>
    <div class="large-4 columns">
      <%= image_tag 'calendar.png' %>
      <h4 class="subheader"><%= homepage(["process", "step3", "title"]) %></h4>
      <p><%= homepage(["process", "step3", "text"]) %></p>
    </div>
  </div>
</div>

<div id="image-loader">
  <% homepage_pics.each do |p| %>
    <%= image_tag p[1]["src"], class: p[0] %>
  <% end %>
</div>

<%= content_for :head do %>
<script src="http://maps.googleapis.com/maps/api/js?libraries=places&amp;sensor=false"></script>
<%= stylesheet_link_tag "home", media: "all", "data-turbolinks-track" => true %>
<% end %>

<%= content_for :body do %>
  <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
<% end %>