<% set_page_title("Tailored travel planning & expert travel advice, on tap - Zuji") %>
<div class="home-cover">
  <div id="destinations">
    <div id="loading" class="text-center">
      <div class="spinner">
        <div class="double-bounce1"></div>
        <div class="double-bounce2"></div>
      </div>
      <h6 class="subheader primary serif"><em>Hang tight, we're just loading up...<br>:: beep beep boop ::</em></h6>
    </div>
    <div class="row">
      <div class="large-12 small-12 columns">
        <h1 id="header" class="no-margin" ><%= homepage("header") %></h1>
        <h3 id="sub-header" class="white subheader"><%= homepage("subheader") %></h3>
        <%= form_for @itinerary, html: { class: 'custom' } do |f| %>
        <div id="dest" class="large-5 no-margin no-padding left small-12 columns">
          <%= f.select :destination, options_for_select(@cities), prompt: "Pick a city" %>
          <%= f.hidden_field :source, value: "zuji" %>

          <%= errors_for(@itinerary, :destination) %>
        </div>
        <div id="contestbtn" class="large-2 left no-margin no-padding small-12 columns">
          <%= f.submit homepage("submit"), class: "button radius expand" %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="large-12 small-12 columns">
        <p class="white" style="font-size:.875em; margin-top:-23px"><em><a href="" data-reveal-id="city-modal" class="white">Can't find your city?</a></em></p>
      </div>
    </div>

    <div class="navig hide-for-small">
      <div id="expert-loader">
        <% homepage_pics.each do |p| %>
        <div class="row large-5 no-padding columns right expert <%= p[0] %>">
          <div class="large-9 small-9 text-right columns">
            <h5><%= p[1]["title"] %></h5>
            <p><em class="hide-for-small">"<%= p[1]["text"] %>"</em> - <strong class="sans"><%= p[1]["expert"].html_safe %></strong></p>
          </div>
          <div class="large-3 small-3 right columns">
            <%= image_tag p[1]["avatar"], class: "th rounded" %>
          </div>
        </div>

        <% end %>
      </div>
    </div>
    <a href="" class="text-center"><%= image_tag "down.png", id: "scroll-down" %></a>
  </div>
</div>

<div id="steps" class="row break">
  <div class="large-10 large-centered text-center small-12 columns">
    <h3 class="subheader serif" style="margin-bottom:60px;"><em><%= homepage(["process", "text"]).html_safe %></em></h3>
    <hr style="border:1px #e6e6e6 solid;">
    <div class="break">
      <h3><%= homepage(["process", "step1", "title"]).html_safe %></h3>
      <div class="large-6 small-12 text-center columns">
        <h4 class="subheader serif step-detail" ><em><%= homepage(["process", "step1", "text"]).html_safe %></em></h4>
      </div>
      <div class="large-5 large-offset-1 small-12 text-center columns">
        <%= image_tag 'describe.png', style: "margin-top:28px !important;" %>
      </div>
      <hr style="border:1px #e6e6e70px6 solid;">
    </div>
    <div class="short-break">
      <h3><%= homepage(["process", "step2", "title"]).html_safe %></h3>
      <div class="large-6 small-12 text-center columns">
        <h4 class="subheader serif step-detail"  ><em><%= homepage(["process", "step2", "text"]).html_safe %></em></h4>
      </div>
      <div class="large-5 large-offset-1 small-12 text-center columns">
        <%= image_tag 'pick.png' %>
      </div>
      <hr style="border:1px #e6e6e6 solid;">
    </div>
    <div class="short-break">
      <h3><%= homepage(["process", "step3", "title"]).html_safe %></h3>
      <div class="large-6 small-12 text-center columns">
        <h4 class="subheader serif step-detail" ><em><%= homepage(["process", "step3", "text"]).html_safe %></em></h4>
      </div>
      <div class="large-5 large-offset-1 small-12 text-center columns">
        <%= image_tag 'script.png' %>
      </div>
      <hr style="border:1px #e6e6e6 solid;">
    </div>
    <div class="short-break">
      <h3><%= homepage(["process", "step4", "title"]).html_safe %></h3>
      <div class="large-6 small-12 text-center columns">
        <h4 class="subheader serif step-detail" ><em><%= homepage(["process", "step4", "text"]).html_safe %></em></h4>
      </div>
      <div class="large-5 large-offset-1 small-12 text-center columns">
        <%= image_tag 'ready.png', style: "margin-top:57px;" %>
      </div>
      <hr style="border:1px #e6e6e6 solid;">
    </div>
  </div>
</div>

<% unless @featuring_stories.blank? %>
<div id="featuring" class="break">
  <div class="row">
    <div class="large-12 small-12 columns">
      <h3 class="text-center serif subheader black"><em>Need ideas? Here are some featured stories from Zuji.</em></h3>
    </div>
  </div>
  <div id="detail-loader" >
    <%= render partial: 'plans/featured', collection: @featuring_stories, as: :plan %>
  </div>
  <div class="row">
    <div class="large-12 small-12 columns navigate">
      <!-- adds jquery navigation -->
    </div>
  </div>
</div>

<div class="row top" style="margin-top: 50px;margin-bottom: 150px;">
 <div class="large-12 text-center small-12 columns">
   <h2 class="serif subheader black">
     <em>Have a better vacation, or your money back!</em>
   </h2>
   <a class="large button radius" id="scroll-up" href="/" style="margin-top:50px;">Hook me up!</a>
 </div>
</div>


<div id="trip-loader">
  <% @featuring_stories.each do |i| %>
    <%= image_tag i.cover %>
  <% end %>
</div>

<% end %>

<div id="image-loader">
  <% homepage_pics.each do |p| %>
    <%= image_tag p[1]["src"], class: p[0] %>
  <% end %>
</div>

<div id="city-modal" class="reveal-modal small text-center">
  <h3>Can't find the city you're traveling to?</h3>
  <h5 style="margin-bottom:50px; margin-top:20px;" class="serif subheader"><em>Zuji Plan My Trip is adding new cities to the list every day. Tell us what cities you'd like to see next and we'll keep you updated as new cities are added.</em></h5>
  <input type="text" placeholder="Cities, regions & countries you'd like to see"></input>
  <a href="" class="radius expand button" >Send</a>
  <div class="row"><a class="close-reveal-modal" >&#215;</a></div>
</div>

