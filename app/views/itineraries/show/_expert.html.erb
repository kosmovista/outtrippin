<% expanded_sidebar %>
<% full_pitch %>
<% if @pitch.blank? %>
<div class="row">
  <div class="small-12 small-centered columns">
    <h2 class="white text-center"><%= @itinerary.extra_info[:name].blank? ? "Trip to " + @itinerary.destination : @itinerary.extra_info[:name] %></h2>
    <div class="large-1 hide-for-small large-centered columns">
        <hr style="border-color:white;">
      </div>
    <h5 class="white serif subheader text-center"><em>Wanna help <%= @itinerary.extra_info[:travelers] %> plan their trip? Game on, we've taken the liberty of adding a few details from your profile so you can simply edit and send!</em></h5>
  </div>
</div>
</div class="header">
<div class="tabs"></div>
</div class="cover">
<div class="row">
  <div class="large-11 large-centered small-12 columns">
    <div class="row break">
      <div id="personal" class="large-2 small-12 columns">
        <%= link_to (image_tag current_user.avatar.url(:thumb), class: "avatar right rounded", style: "width:70px; margin-left:40px;"), user_path(current_user), target: "_blank", title: "User Profile" %>
        <h4 class="no-margin no-padding">  <%= link_to current_user.personal_info[:name], user_path(current_user), target: "_blank", class: "black", title: "User Profile" %></h4>
        <p class="no-margin no-padding"><small><em><%= link_to expert_info_website_url(current_user.website), "http://" + expert_info_website_url(current_user.website), target: '_blank' unless current_user.website.blank? %></em></small></p>
        <div class="large-5 hide-for-small no-padding no-margin right columns">
          <hr>
        </div>
        <%= link_to "Submit Pitch", new_itinerary_pitch_path(@itinerary), class: "button small radius" %>
      </div>

      <div class="large-5 small-12 columns">
        <h5 class="subheader serif"><em>My travel interests:</em></h5>
      </div>

      <div class="large-3 text-right hide-for-small columns">
        <%= link_to (image_tag "facebook.png", style: "width:30px"),  expert_info_website_url(current_user.facebook), target: '_blank' unless current_user.facebook.blank? %>
        <%= link_to (image_tag "pinterest_40.png", style: "width:23px"), expert_info_website_url(current_user.pinterest), target: '_blank' unless current_user.pinterest.blank? %>
        <%= link_to (image_tag "twitter.png", style: "width:30px"), expert_info_twitter_url(current_user.twitter), target: '_blank' unless current_user.twitter.blank? %>
        <%= link_to (image_tag "instagram.png", style: "width:30px"),  expert_info_instagram_url(current_user.instagram), target: '_blank' unless current_user.instagram.blank? %>
      </div>

      <div class="large-8 small-12 left columns details">
        <% unless current_user.expert_info[:style].blank? %>
        <ul class="sans skill-list">
          <% current_user.expert_info[:style].each do |s| %>
          <li><%= s %></li>
          <% end %>
        </ul>
        <% end %>

        <h5 class="subheader serif"><em>Why I'm perfect for your trip to <%= @itinerary.destination %></em></h5>
        <p><%= current_user.expert_info[:bio] %></p>
      </div>
    </div>
  </div>
</div>
<% else %>
<div class="row">
  <div class="small-12 small-centered columns">
    <h2 class="white text-center"><%= @itinerary.extra_info[:name].blank? ? "Trip to " + @itinerary.destination : @itinerary.extra_info[:name] %></h2>
    <div class="large-1 hide-for-small large-centered columns">
        <hr style="border-color:white;">
      </div>
    <h5 class="white serif subheader text-center"><em>Thanks for offering <%= @itinerary.extra_info[:travelers] %> to help plan their trip! They're checking it out and we'll keep you updated on how it goes. In the meantime, you can still edit your offer if you'd like to.</em></h5>
  </div>
</div>
</div class="header">
<div class="tabs"></div>
</div class="cover">
<div class="row">
  <div class="large-11 large-centered small-12 columns">
  	<%= render @pitch %>
  </div>
</div>
<% end %>