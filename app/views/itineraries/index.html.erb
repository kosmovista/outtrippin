<% set_page_title("Dashboard - OutTrippin") %>
<style>
.cover { background-image:url('/assets/cover1.jpg'); height:200px; }
#overlay {height:200px;}
.header {top:60px;}
.tabs {top:160px;}
</style>
<div class="cover"></div>
<div id="overlay"></div>
<% if current_user.is?("expert") %>
<div class="header">
  <div class="row">
    <div class="small-12 large-10 small-centered columns">
      <h2 class="white">Storyteller's Dashboard</h2>
    </div>
  </div>
</div>
<div class="tabs">
  <div class="row">
    <div class="small-12 large-10 small-centered columns">
        <ul id="cover-tabs" class="inline-list cover-tabs text-center no-margin sans">
          <li><a href="#" id="slide0" class="active-tab">OPEN REQUESTS</a></li>
          <li><a href="#" id="slide1" >ASSIGNED REQUESTS</a></li>
          <li><a href="#" id="slide1" >PITCHED</a></li>
          <li><a href="#" id="slide1" >WON</a></li>
          <li><a href="#" id="slide1" >COMPLETED</a></li>
        </ul>
        <hr style="border-color:white; margin-top:0;">
      </div>
    </div>
  </div>
</div>

<% unless @starred_itineraries.blank? %>
  <h1>STARRED ITINERARIES</h1>
  <%= render @starred_itineraries %>
<% end %>

<%= render @itineraries %>

<% else %>
<div class="header">
  <div class="row">
    <div class="small-12 large-10 small-centered columns">
      <h2 class="white">Traveler's Dashboard</h2>
    </div>
  </div>
</div>
<div class="tabs">
  <div class="row">
    <div class="small-12 large-10 small-centered columns">
        <ul id="cover-tabs" class="inline-list cover-tabs text-center no-margin sans">
          <li><a href="#" id="slide0" class="active-tab">IN PROGRESS</a></li>
          <li><a href="#" id="slide1" >COMPLETED</a></li>
        </ul>
        <hr style="border-color:white; margin-top:0;">
      </div>
    </div>
  </div>
</div>
<%= render @itineraries %>
<% end %>