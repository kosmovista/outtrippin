<% set_page_title(@itinerary.extra_info[:name].blank? ? "Trip to " + @itinerary.destination + " - OutTrippin" : @itinerary.extra_info[:name] + " - OutTrippin") %>
<style>
.cover { background-image:url(<%= @plan.cover %>); }
</style>
<div class="row">
  <div class="large-12 small-12 text-center columns">
    <h2 class="white text-center"><%= @itinerary.extra_info[:name].blank? ? "Trip to " + @itinerary.destination : @itinerary.extra_info[:name] %></h2>
    <div class="large-1 hide-for-small large-centered columns">
          <hr style="border-color:white;">
      </div>
    <h5 class="white serif subheader text-center">
      <%= image_tag @plan.user.avatar.url, class: "rounded text-right tip-avatar", style:"width:30px;" %>
      <em>By <%= @plan.user.personal_info[:name] %> &#8226; For <%= @itinerary.extra_info[:travelers] %>'s trip to <%= @itinerary.destination %></em>
    </h5>
  </div>
</div>
</div class="header">
<div class="tabs">
  <div class="row">
    <div class="large-11 large-centered text-center small-12 columns">
      <div class="large-8 large-centered text-center small-12 columns">
        <ul id="cover-tabs" class="inline-list cover-tabs text-center no-margin sans">
          <li><a href="#" id="slide0" class="active-tab">THE STORY</a></li>
          <li><a href="#" id="slide1" >COMMENTS</a></li>
          <li><a href="#" data-reveal-id="update-modal" >MAPS</a></li>
          <li><a href="#" data-reveal-id="update-modal" >BOOKING</a></li>
          <li><a href="#" id="slide4" >THE STORYTELLER</a></li>
        </ul>
        <hr style="border-color:white; margin-top:0;">
      </div>
    </div>
  </div>
</div>

<div class="row" id="slide0-content">
  <ul class="small-block-grid-1 break">
    <% @plan.days.each_with_index do |d, i| %>
    <li>
      <div class="read">
        <div class="row">
          <div class="large-11 large-centered small-12 columns">
            <div class="large-2 left small-6 columns">
              <h5 class="subheader serif"><em>Day <%= i+1 %></em></h5>
            </div>
            <div class="large-8 left columns">
              <h3 style="margin-top:0;"><%= d[:title] %></h3>
              <div class="desc">
                <div class="day-photo-C">
                <img src="<%= d[:picture] %>"></img></div>
                <p><%= d[:body].html_safe %></p>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="large-1 small-12 large-centered columns">
            <hr>
          </div>
        </div>
      </div>
    </li>

    <% end %>

    <% @plan.tips_tricks.each do |tt| %>
    <li>
      <div class="row">
        <div class="large-10 large-centered columns">
          <div class="tips">
            <h4 class="subheader black serif"><em><span style="font-size:120%;"><%= tt[:title] %></span> <%= tt[:body] %></em></h4>
            <h6 class="subheader serif" style="padding-top:.8em;">
              <%= image_tag @plan.user.avatar.url, class: "rounded text-right tip-avatar" %>
              <em>A tip by <%= @plan.user.personal_info[:name] %></em>
            </h6>
          </div>
        </div>
      </div>
    </li>
    <% end %>
  </ul>

  <div class="row written-by">
    <div class="large-11 large-centered small-12 columns">
      <div class="large-8 small-12 large-centered columns"><hr>
        <p class="sans subheader" style="margin-bottom:15px;"><small>WRITTEN BY</small></p>
        <div class="row">
          <div class="large-12 small-12 columns">
            <%= image_tag @plan.user.avatar.url, class: "rounded avatar-footer" %>
            <h5 class="no-margin no-padding"><%= @plan.user.personal_info[:name] %></h5>
            <h5 class="subheader serif" style="line-height:1em;"><em><small><%= @plan.user.expert_info[:bio] %></em></small></h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row" id="slide4-content">
  <div class="large-11 large-centered small-12 columns">
    <%= render @itinerary.winner_pitch %>
  </div>
</div>

<div id="update-modal" class="reveal-modal medium text-center">
  <h2>This power feature is coming soon!</h3>
  <h4 style="margin-top:40px;" class="serif black subheader"><em>The OutTrippin team is working round-the-clock to bring you this awesomeness very soon! Sign up below to stay tuned for updates.</em></h4>
  <h4 class="serif subheader black"><em></em></h4>
  <a href="#" class="radius button" style="margin-top:40px;">Send me updates!</a>
  <a class="close-reveal-modal">&#215;</a>
</div>