<% set_page_title( @itinerary.winner_pitch.title + " by " + @plan.user.personal_info[:name] + " - OutTrippin") %>
<% set_page_desc( @itinerary.winner_pitch.summary ) %>
<% set_page_pic( @plan.cover ) %>
<%= content_for :head do %>
  <meta name="twitter:creator" content="<%= "@" +  @plan.user.twitter unless @plan.user.twitter.blank? %>"> 
<% end %>
<style>
.cover { background-image:url(<%= @plan.cover %>); margin-bottom:0; }
</style>
<div class="row">
  <div class="large-12 small-12 text-center columns">
    <h2 class="white text-center"><%= @itinerary.winner_pitch.title %></h2>
    <div class="large-1 hide-for-small large-centered columns">
          <hr style="border-color:white;">
      </div>
    <h5 class="white serif subheader text-center">
      <%= image_tag @plan.user.avatar.url, class: "rounded text-right tip-avatar", style:"width:30px;" %>
      <em>By <%= @plan.user.personal_info[:name] %> &#8226; For <%= @itinerary.extra_info[:travelers] %>'s trip to <%= @itinerary.destination %></em>
    </h5>
  </div>
</div>
</div class="header">


<div class="tabs">
  <div class="row">
    <div class="large-12 large-centered text-center small-12 columns">
      <div class="large-8 large-centered text-center small-12 columns">
        <ul id="cover-tabs" class="inline-list cover-tabs text-center no-margin sans">
          <li><a href="#" id="slide0" class="active-tab">THE STORY</a></li>
          <% if current_user %>
          <li><a href="#" id="slide1" >THE REQUEST</a></li>
          <% end %>
          <li><a href="#" data-reveal-id="update-modal" >MAPS</a></li>
          <li><a href="#" data-reveal-id="update-modal" >BOOKING</a></li>
        </ul>
        <hr style="border-color:white; margin-top:0;">
      </div>
    </div>
  </div>
</div>

<div id="slide0-content">
  <div class="summary">
    <div class="row">
      <div class="large-11 large-centered small-12 columns">
        <h5 class="subheader text-center serif" style="line-height:1.8em;"><em>"<%= @itinerary.winner_pitch.summary %>"</em></h6>
        <h5 class="serif black text-right subheader" style="margin-top:20px;"><%= image_tag @plan.user.avatar.url, class: "rounded right tip-avatar", style:"width:2.5em; margin-top:5px; margin-left:20px;" %><em>- <%= @plan.user.personal_info[:name] %> <br>OutTrippin Storyteller</em></h5>
      </div>
    </div>
  </div>
  <ul class="small-block-grid-1 break">
    <% @plan.days.each_with_index do |d, i| %>
    <li>
      <div class="read">
        <div class="row">
          <div class="large-12 large-centered small-12 columns">
            <div class="large-2 left small-6 columns">
              <h5 class="subheader serif"><em>Day <%= i+1 %></em></h5>
            </div>
            <div class="large-8 left columns">
              <h3 style="margin-top:0;"><%= d[:title] %></h3>
              <div class="desc">
                <div class="day-photo-C">
                <img src="<%= d[:picture] %>"></img></div>
                <p><%= d[:body].html_safe %></p>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="large-1 small-12 large-centered columns">
            <hr>
          </div>
        </div>
      </div>
    </li>

    <% end %>

    <% @plan.tips_tricks.each do |tt| %>
    <li>
      <div class="row">
        <div class="large-11 large-centered columns">
          <div class="tips">
            <h4 class="subheader black serif"><em><span style="font-size:120%;"><%= tt[:title] %></span> <%= tt[:body] %></em></h4>
            <h6 class="subheader serif" style="padding-top:.8em;">
              <%= image_tag @plan.user.avatar.url, class: "rounded text-right tip-avatar" %>
              <em>A tip by <%= @plan.user.personal_info[:name] %></em>
            </h6>
          </div>
        </div>
      </div>
    </li>
    <% end %>
  </ul>

  <div class="row written-by">
    <div class="large-12 large-centered small-12 columns">
      <div class="large-8 small-12 large-centered columns"><hr>
        <p class="sans subheader" style="margin-bottom:15px;"><small>BY OUTTRIPPIN STORYTELLER</small></p>
        <div class="row">
          <div class="large-12 small-12 columns">
            <%= image_tag @plan.user.avatar.url, class: "rounded avatar-footer" %>
            <h5 class="no-margin no-padding"> <%= link_to @plan.user.personal_info[:name], user_path(@plan.user), target: "_blank", class: "black", title: "User Profile" %> <a href="" data-dropdown="interestd" data-options="is_hover:true"><%= image_tag 'info.png', style: "opacity:0.5; margin:-4px 0 0 5px; width:25px;" %></a>
              <%= link_to (image_tag "facebook.png", class: "right", style: "width:25px"),  expert_info_website_url(@plan.user.facebook), target: '_blank' unless @plan.user.facebook.blank? %>
              <%= link_to (image_tag "pinterest_40.png", class: "right", style: "width:18px"), expert_info_website_url(@plan.user.pinterest), target: '_blank' unless @plan.user.pinterest.blank? %>
              <%= link_to (image_tag "twitter.png", class: "right", style: "width:25px"), expert_info_twitter_url(@plan.user.twitter), target: '_blank' unless @plan.user.twitter.blank? %>
              <%= link_to (image_tag "instagram.png", class: "right", style: "width:25px"),  expert_info_instagram_url(@plan.user.instagram), target: '_blank' unless @plan.user.instagram.blank? %></h5>
            <h5 class="subheader serif" style="line-height:1em;"><em><small><%= @itinerary.winner_pitch.why_me %></em></small></h5>
          </div>
          <div id="interestd" class="f-dropdown medium content" data-dropdown-content>
            <h5 class="subheader serif"><em>My travel interests:</em></h5>
            <p>
           <% unless @plan.user.expert_info[:style].blank? %>
            <ul class="sans skill-list">
              <% @plan.user.expert_info[:style].each do |s| %>
              <li><%= s %></li>
              <% end %>
            </ul></p>
            <% end %>
            <em><%= link_to "...See my full profile", user_path(@plan.user), target: "_blank", title: "Storyteller's Profile" %></em>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% if current_user %>
  <div class="row" id="slide1-content">
    <div class="large-12 large-centered small-12 columns">
        <%= render 'itineraries/itinerary_full' %>
    </div>
    <div class="written-by">
      <div class="large-12 large-centered small-12 columns">
        <div class="large-8 large-centered small-12 columns">
          <%= render 'itineraries/show/comments' %>
        </div>
      </div>
    </div>
  </div>
<% end %>


<div id="update-modal" class="reveal-modal medium text-center">
  <h2>This power feature is coming soon!</h3>
  <h4 style="margin-top:40px;" class="serif black subheader"><em>The OutTrippin team is working round-the-clock to bring you this awesomeness very soon! Sign up below to stay tuned for updates.</em></h4>
  <h4 class="serif subheader black"><em></em></h4>
  <a href="#" id="power-feature" data-reveal-id="recorded" class="radius button" style="margin-top:40px;">Send me updates!</a>
  <a class="close-reveal-modal">&#215;</a>
</div>

<div id="recorded" class="reveal-modal medium text-center">
  <h3>Saved! We'll keep you updated on when this feature is released.</h3>
</div>

<div class="share hide-on-print">
  <h4 class="serif subheader"><em><a href="#" id="sharebutton" data-reveal-id="share-modal" class="sharethis">Share this story.</a></em></h4>
  <hr style="border: 1px #cccccc solid;margin-top: -30px;z-index: 9;">
</div>
<div id="share-modal" class="reveal-modal medium text-center">
  <h3>Share this with a friend.</h3>
  <h5 style="margin-bottom:50px; margin-top:20px;" class="serif subheader"><em>If you like what you see or know someone who'll love this, share it with them. :)</em></h5>
  <div class="large-7 small-12 columns large-centered">
    <ul class="small-block-grid-3">
      <li><a href="<%= "https://www.facebook.com/sharer/sharer.php?u=http://outtrippin.com/itineraries/" + @itinerary[:id].to_s %>" target="_blank" id="facebook-share"><%= image_tag 'facebook-large.png', style: "width:100%;", class: "circle-button" %></a></li>
      <li><a href="#" data-reveal-id="email-share" id="email-share"><%= image_tag 'email-large.png', style: "width:100%;", class: "circle-button" %></a></li>
      <li><a href="<%= "https://www.twitter.com/share?text=" + @itinerary.winner_pitch.title + (" by @" + @plan.user.twitter unless @plan.user.twitter.blank?) + "&via=" + "OutTrippin" + "&url=http://outtrippin.com/itineraries/" + @itinerary[:id].to_s %>" id="twitter-share" target="_blank"><%= image_tag 'twitter-large.png', class: "circle-button", style: "width:100%;" %></a></li>
    </ul>
  </div>
  <a class="close-reveal-modal">&#215;</a>
</div>
<div id="email-share" class="reveal-modal small text-center">
  <h3>Send via email</h3>
   <%= form_tag email_sharer_itinerary_path, method: :put do %>
    <%= text_field_tag :emails, nil, placeholder: "c.kent@gmail.com, t.stark@yahoo.com, b.waybe@hotmail.com.com..." %>
    <%= text_area_tag :message, "Hey there, just wanted to get your opinion on a new trip I'm planning on OutTrippin.com. Travel experts are pitching me ideas on what to do for my vacation, and I'd love get your opinion on which one to pick!", { placeholder: "Write a message...", style: "height:150px;" } %>
    <%= submit_tag "Send", id: "email-share", class: "expand button radius" %>
    <a class="close-reveal-modal">&#215;</a>
</div>

<%= content_for :body do %>
  <script>
  mixpanel.track("Page Loaded", {
    "Story_id": "<%= @itinerary.winner_pitch.title %>",
    "Author": "<%= @plan.user.personal_info[:name] %>",
    "Stage": "Final Story"
  });
  mixpanel.track_links("#slide0-content a", "Clicked Story Link", {
    "Story_id": "<%= @itinerary.winner_pitch.title %>",
  });
  mixpanel.track_links("#facebook-share", "Facebook Share", {
    "Story_id": "<%= @itinerary.winner_pitch.title %>",
    "Stage": "Final Story"
  });
  mixpanel.track_links("#twitter-share", "Twitter Share", {
    "Story_id": "<%= @itinerary.winner_pitch.title %>",
    "Stage": "Final Story"
  });
  mixpanel.track_links("#power-feature", "Request Feature Update", {
    'Feature': 'Add Traveler'
  });
  $("#sharebutton").click(function() {
    mixpanel.track("Share Button", {
      "Story_id": "<%= @itinerary.winner_pitch.title %>",
      "Stage": "Final Story"
    });
  });
  $("#email-share").click(function() {
    mixpanel.track("Email Share", {
      "Story_id": "<%= @itinerary.winner_pitch.title %>",
      "Stage": "Final Story"
    });
  });
  </script>
<% end %>
