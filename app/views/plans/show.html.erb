<div class="cover" style="background-image:url({{plan.cover}})">
  <div class="header">
    <div class="row">
      <div class="large-2 small-6 text-center large-centered small-centered columns">
        <label class="file-input">
          <input type="file" ng-file-select="onFileSelect($files, true, 0)">
        </label>
      </div>
    </div>
  </div>
   <div class="row tabs"></div>
</div>

<ul class="days small-block-grid-1">
  <li ng-repeat="day in plan.days" id="{{day.id}}">
    <!-- DISPLAY TITLE, PARAGRAPH AND EDIT BUTTON -->
    <div ng-show="!editing" class="read">
      <div class="row">
        <div class="large-11 large-centered small-12 columns">
          <div class="large-2 small-6 columns">
            <h5 class="subheader serif"><em>Day X</em></h5>
          </div>
          <div class="large-2 small-6 right columns">
            <a href="" class="circle-button"  ng-click="editing = true" title="Edit Day"><img src="/assets/edit-circle.png" style="width:30px" class="circle-button"></img></a>
            <label class="file-input">
              <input type="file" ng-file-select="onFileSelect($files, false, day.id)">
            </label>

            <img src="{{day.picture}}"></img>

          </div>
          <div class="large-8 columns">
            <h3 style="margin-top:0;">{{day.title}}</h3>
            <div class="desc">
              <p ng-bind-html="day.body"></p>
            </div>
          </div>
          <div class="large-1 small-12 large-centered columns">
            <hr>
          </div>
        </div>
      </div>
    </div>
    <!-- WHILE EDITING -->
    <div ng-show="editing" class="edit">
      <div class="row">
        <div class="large-11 large-centered small-12 columns">
          <div class="row">
            <form ng-submit="editing = false" style="margin:0;">
              <div class="large-2 small-6 columns">
                <h5 class="subheader serif"><em>Day X</em></h5>
              </div>
              <div class="large-2 right small-6 columns">
                <a href="" class="circle-button" title="Add Image"><img src="/assets/camera.png" class="hide-for-medium-up" style="width:25px; opacity:0.7;"></img></a>
                <a href="" class="circle-button" title="Save Changes" ng-click="update_day(day.id, day.title, day.body)"><img src="/assets/save.png" style="width:25px"></img></a>
                <a href="" class="circle-button" title="Cancel" ng-click="editing = false"><img src="/assets/cancel.png" style="width:25px"></img></a>
                <a href="" class="circle-button" title="Delete Day" ng-click="delete_day(day.id)"><img src="/assets/delete-circle.png" style="width:25px"></img></a>
              </div>
              <div class="large-8 small-12 columns">
                <h3><input type="text" autofocus="true" ng-model="day.title"></h3>
                <div class="desc" text-angular ng-model="day.body"></div>
              </div>
            </form>
          </div>
          <div class="row">
            <div class="large-1 small-12 large-centered columns">
              <hr>
            </div>
          </div>
        </div>
      </div>
    </div>
  </li>

  <!-- ADD NEW DAY -->
  <li>
    <div ng-show="add_day" class="edit">
      <div class="row">
        <form ng-submit="add_day = false" style="margin:0;">
          <div class="large-11 large-centered small-12 columns">
            <div class="large-2 small-6 columns">
              <h5 class="subheader serif"><em>Day X</em></h5>
            </div>
            <div class="large-2 right small-6 columns">
              <a href="" class="circle-button" title="Add Image"><img src="/assets/camera.png" class="hide-for-medium-up" style="width:25px; opacity:0.7;"></img></a>
              <a href="" class="circle-button" title="Cancel" ng-click="add_day=false"><img src="/assets/cancel.png" style="width:25px"></img></a>
              <a href="" class="circle-button" title="Save Day" ng-click="save_day()"><img src="/assets/save.png" style="width:26px"></img></a>
            </div>
            <div class="large-8 small-12 columns">
              <h3><input type="text" autofocus="true" ng-model="day.title" placeholder="Day Title"/></h3>
              <div class="desc" text-angular ng-model="day.body"></div>
            </div>
            <div class="large-1 small-12 large-centered columns">
              <hr>
            </div>
          </div>
        </form>
      </div>
    </div>
  </li>

  <li ng-repeat="tt in plan.tips_tricks" id="{{tt.id}}">
    <!-- DISPLAY TITLE, PARAGRAPH AND EDIT BUTTON -->
    <div class="row">
      <div class="large-11 large-centered columns">
        <div class="large-2 right columns">
          <a href="" class="circle-button" ng-click="editing_tt=true" title="Edit Tip"><img src="/assets/edit-circle.png" style="width:30px;" class="circle-button"></img></a>
        </div>
        <div class="large-7 large-centered columns">
          <div ng-show="!editing_tt">
            <div class="itinerary panel">
              <h4 class="subheader serif"><em><span style="font-size:120%;">{{tt.title}}</span> {{tt.body}}</em></h4>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- WHILE EDITING TIP & TRICK -->
    <div class="row">
      <div class="large-11 large-centered columns">
        <div class="large-6 large-offset-3 columns">
          <div ng-show="editing_tt">
            <a href="" class="circle-button" title="Save Changes" ng-click="update_tip_trick(tt.id, tt.title, tt.body)"><img src="/assets/save.png" style="width:25px"></img></a>
            <a href="" class="circle-button" title="Cancel" ng-click="editing_tt=false"><img src="/assets/cancel.png" style="width:25px"></img></a>
            <a href="" class="circle-button" title="Delete Tip Trick" ng-click="delete_tip_trick(tt.id)"><img src="/assets/delete-circle.png" style="width:25px"></img></a>

            <input type="text" autofocus="true" ng-model="tt.title" />
            <input type="text" ng-model="tt.body" />
          </div>
        </div>
      </div>
    </div>
  </li>

  <!-- ADD NEW TIP TRICK -->
  <li>
    <div class="row">
      <div class="large-11 large-centered columns">
        <div class="large-6 large-offset-3 columns">
          <div ng-show="add_tip_trick">
            <div class="row">
              <div class="large-9 columns">
                <form ng-submit="add_tip_trick = false" style="margin:0;">
                  <input type="text" autofocus="true" ng-model="tip_trick.title" placeholder="TT Title"/>
                  <input type="text" ng-model="tip_trick.body" placeholder="TT Body"/>
                </form>
              </div>
              <div class="large-3 columns">
                <a href="" class="circle-button" title="Cancel" ng-click="add_tip_trick=false"><img src="/assets/cancel.png" style="width:25px"></img></a>
                <a href="" class="circle-button" title="Save Day" ng-click="save_tip_trick()"><img src="/assets/save.png" style="width:26px"></img></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </li>

  <!-- ADD NEW DAY/TIPS&TRICKS BUTTONS -->
  <li>
    <div class="row">
      <div class="large-12 text-center columns">
        <a href="" class="button radius" ng-click="add_day=true">&#43; Add Day</a>
        <a href="" class="button radius" style="margin-left:10px;" ng-click="add_tip_trick=true">&#43; Add a Tip </a>
      </div>
    </div>  
  </li>
</ul>
<div class="row">
  <div class="large-11 large-centered columns">
    <ul class="small-block-grid-1">


      
      

      <li>
        <div class="row">
          <div class="large-12 text-center columns">
            
          </div>
        </div>
      </li>

    </ul>
  </div>
</div>