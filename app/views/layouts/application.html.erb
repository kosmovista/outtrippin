<head>
  <meta charset="utf-8" />

  <!-- Uncomment to make IE8 render like IE7 -->
  <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  <!-- Set the viewport width to device width for mobile -->
  <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no' />

  <title><%= content_for?(:title) ? yield(:title) : "Tailored travel planning and expert travel advice, on tap - Zuji" %></title>
  <meta property="og:title" content= "<%= content_for?(:title) ? yield(:title) : "Tailored travel planning and expert travel advice, on tap - Zuji's Plan My Trip" %>"  >
  <meta property="og:description" content="Tailored travel planning, inspiration, advice and recommendations from travel experts around the world. Design the trip you've been dreaming of with Zuji Plan My Trip.">
  <meta property="og:image" content="http://b8556536e41a83f2856c-9d3af255cebd1b18b21184d2df8a2f53.r11.cf1.rackcdn.com/frontpage/01_rio.jpg">
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "home", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "vendor/custom.modernizr" %>
  <script type="text/javascript" src="//use.typekit.net/ijb7oxv.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-39856141-1']);
    _gaq.push(['_setDomainName', 'zuji.com.au']);
    _gaq.push(['_trackPageview']); (function () {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true; ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js'; var s = document.getElementsByTagName('script')[0];
    s.parentNode.insertBefore(ga, s);
    })();
  </script>

  <%= render 'tools/mixpanel' %>
  <%= csrf_meta_tags %>

  <%= yield :head %>
</head>

<body>
  <%= render 'layouts/parts/topbar' %>

  <%= render 'utils/errors', object: nil %>

  <div class="container">
    <%= yield %>
  </div>
  <%= render 'layouts/parts/footer' %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <%= yield :body %>
</body>
</html>