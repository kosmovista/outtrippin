<head>
  <meta charset="utf-8" />

  <!-- Uncomment to make IE8 render like IE7 -->
  <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  <!-- Set the viewport width to device width for mobile -->
  <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no' />

  <title><%= content_for?(:title) ? yield(:title) : "Become an OutTrippin expert!" %></title>

  <%= stylesheet_link_tag "itineraries", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "vendor/custom.modernizr" %>
  <script type="text/javascript" src="//use.typekit.net/ijb7oxv.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <%= csrf_meta_tags %>

  <%= yield :head %>
</head>

<body>
  <%= render 'layouts/parts/topbar' %>
  <div class="container">
    <div class="row">
   <!--   <div id="left-col" class="large-3 columns hide">
        <%= yield :left_col %>
      </div> -->
      <div id="right-col" class="large-10 large-centered columns">
        <%= yield %>
      </div>
    </div>
  </div>
  <%= render 'layouts/parts/footer' %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= yield :body %>
</body>
</html>