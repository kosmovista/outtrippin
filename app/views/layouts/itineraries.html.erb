<head>
  <meta charset="utf-8" />

  <!-- Uncomment to make IE8 render like IE7 -->
  <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  <!-- Set the viewport width to device width for mobile -->
  <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no' />

  <title><%= content_for?(:title) ? yield(:title) : "Tailored travel planning, inspiration, advice and recommendations from travel experts around the world - OutTrippin" %></title>
  <!-- Facebook tags -->
  <meta property="og:title" content= "<%= content_for?(:title) ? yield(:title) : "Make better travel stories with OutTrippin" %>"  >
  <meta property="og:description" content="<%= content_for?(:desc) ? yield(:desc) : "Tailored travel planning, inspiration, advice and recommendations from travel experts around the world. Design the trip you've been dreaming of with OutTrippin." %>" >
  <meta property="og:image" content="<%= content_for?(:pic) ? yield(:pic) : "http://b8556536e41a83f2856c-9d3af255cebd1b18b21184d2df8a2f53.r11.cf1.rackcdn.com/frontpage/01_rio.jpg" %>">
  <!-- End Facebook Tags -->
  <!-- Twitter tags -->
  <meta name="twitter:card" content="product">
  <meta name="twitter:site" content="@OutTrippin">
  <meta name="twitter:description" content="<%= content_for?(:desc) ? yield(:desc) : "Tailored travel planning, inspiration, advice and recommendations from travel experts around the world. Design the trip you've been dreaming of with OutTrippin." %>">
  <meta name="twitter:image" content="<%= content_for?(:pic) ? yield(:pic) : "http://b8556536e41a83f2856c-9d3af255cebd1b18b21184d2df8a2f53.r11.cf1.rackcdn.com/frontpage/01_rio.jpg" %>">
  <!-- End Twitter Tags -->


  <%= stylesheet_link_tag "itineraries", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "vendor/custom.modernizr" %>
  <script type="text/javascript" src="//use.typekit.net/ijb7oxv.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <%= csrf_meta_tags %>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    ga('create', 'UA-42632504-1', 'outtrippin.com');
    ga('send', 'pageview');
  </script>

 <%= render 'tools/mixpanel' %>

  <%= yield :head %>
</head>

<body>
  <%= render 'layouts/parts/topbar' %>
  <%= render 'utils/errors', object: nil %>
  <%= render 'itineraries/itinerary_left_col' unless @itinerary.nil? %>

  <div class="container">
    <%= yield %>
  </div>



  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <script src="/assets/foundation/foundation.joyride.js"></script>
  <script src="/assets/foundation/foundation.cookie.js"></script>
  <script type="text/javascript">
  $(function(){ $(document).foundation('joyride', 'start') });
  </script>
   <script src="js/foundation/foundation.joyride.js"></script>
  <%= yield :body %>
</body>
</html>