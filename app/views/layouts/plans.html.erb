<head>
  <meta charset="utf-8" />

  <!-- Uncomment to make IE8 render like IE7 -->
  <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  <!-- Set the viewport width to device width for mobile -->
  <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no' />

  <title><%= content_for?(:title) ? yield(:title) : "Welcome to OutTrippin!" %></title>

  <%= stylesheet_link_tag "itineraries", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "itinerary_builder", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "vendor/custom.modernizr" %>
  <%= javascript_include_tag "angular-file-upload-shim.min.js" %>
  <%= javascript_include_tag "angular.min.js" %>
  <script src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.4/angular-sanitize.min.js'></script>
  <%= javascript_include_tag "angular-file-upload.min.js" %>
  <%= javascript_include_tag "textAngular.js" %>
  <%= javascript_include_tag "angular-resource.min.js" %>
  <%= javascript_include_tag "angular/services.js" %>
  <%= javascript_include_tag "angular/controllers.js" %>
  <script src="https://use.typekit.net/rpy6inf.js"></script>
  <script>try{Typekit.load({ async: true });}catch(e){}</script>
  <%= csrf_meta_tags %>
   <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    ga('create', 'UA-42632504-1', 'outtrippin.com');
    ga('require', 'displayfeatures');
    ga('send', 'pageview');
  </script>
  <%= render 'tools/mixpanel' %>
  <%= yield :head %>
</head>


<body ng-controller="PlanCtrl">
  <%= render 'layouts/parts/topbar' %>

  <div class="container">
    <%= yield %>
  </div>

  <%= javascript_include_tag "itinerary_builder", "data-turbolinks-track" => true %>
  <%= yield :body %>

</body>
</html>
