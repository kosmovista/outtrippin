<div class="row">
  <div class="large-10 large-centered columns">
    <%= form_for @expert_registration, url: expert_path, html: { class: 'custom' } do |f| %>

    <div class="row">
      <div class="large-6 columns">
        <%= f.label :name, "Your Name *" %>
        <%= f.text_field :name %>
        <%= errors_for(:name) %>

      </div>
      <div class="large-6 columns">
        <%= f.label :email, "Email *" %>
        <%= f.text_field :email %>
        <%= errors_for(:email) %>
      </div>
    </div>
    <div class="row">
      <div class="large-6 columns">
        <%= f.label :hometown %>
        <%= f.text_field :hometown, class: "location-autocomplete" %>
      </div>
      <div class="large-6 columns">
        <%= f.label :current_location, "Current Location" %>
        <%= f.text_field :current_location, class: "location-autocomplete" %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <%= f.label :bio, "A short travel bio about yourself" %>
        <%= f.text_area :bio, class: 'medium-textarea' %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <% if @expert_registration.errors[:style].empty? %>
        <%= f.label :style, "What is your style of travel?" %>
        <% else %>
        <%= f.label :style, "What is your style of travel? (#{@expert_registration.errors[:style][0]})" %>
        <% end %>
        <%= f.fields_for :style do |styles| %>
          <ul class="small-block-grid-2 large-block-grid-3">
            <% @styles.each do |k,v| %>
              <li><%= styles.check_box k, checked: (@expert_registration.style.blank? ? false : (@expert_registration.style.include?(k) ? true : false)) %><%= k %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="large-6 columns">
        <%= f.label :website, "Your Website" %>
        <%= f.text_field :website %>
        <%= errors_for(:website) %>
      </div>
      <div class="large-6 columns">
        <%= f.label :instagram, "Instagram" %>
        <%= f.text_field :instagram %>
      </div>
    </div>

    <div class="row">
      <div class="large-6 columns">
        <%= f.label :facebook, "Facebook Page" %>
        <%= f.text_field :facebook %>

      </div>
      <div class="large-6 columns">
        <%= f.label :twitter, "Twitter Handle" %>
        <%= f.text_field :twitter %>
      </div>
    </div>

    <div class="row">
      <div class="large-6 columns">
        <%= f.label :countries, "List your specialty countries" %>
      </div>
      <div class="large-6 columns">
        <%= f.label :cities, "List your speciality cities" %>

      </div>
    </div>


    <div class="row">
      <div class="large-6 columns">
        <ul class="expert_registration_countries">
          <% unless @expert_registration.countries.blank? %>
            <% @expert_registration.countries.each do |c| %>
            <li><%= c %><a class="delete" href="#"><%= image_tag 'delete.png'%></a></li>
            <% end %>
          <% end %>
        </ul>
      </div>
      <div class="large-6 columns">
        <ul class="expert_registration_cities">
          <% unless @expert_registration.cities.blank? %>
            <% @expert_registration.cities.each do |c| %>
            <li><%= c %><a class="delete" href="#"><%= image_tag 'delete.png'%></a></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="row">
      <div class="large-6 columns">
        <%= f.text_field :countries, value: "", class: "location-autocomplete add-to-list" %>
        <%= errors_for(:countries) %>
      </div>
      <div class="large-6 columns">
        <%= f.text_field :cities, value: "", class: "location-autocomplete add-to-list" %>
        <%= errors_for(:cities) %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <%= f.label :story, "Include a favorite travel memory" %>
        <%= f.text_area :story, class: 'medium-textarea' %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <%= f.label :travel_hack, "Best travel hack" %>
        <%= f.text_area :travel_hack, class: 'medium-textarea', placeholder: 'e.g. "Most museums have special discount times or free nights. Before I visit, I look on their website to find out if they offer free visiting hours."' %>
      </div>
    </div>


    <div class="row">
      <div class="large-6 columns">
        <%= f.label :password, "Create Password *" %>
        <%= f.password_field :password %>
        <%= errors_for(:password) %>
      </div>
      <div class="large-6 columns">
        <%= f.label :password_confirmation, "Confirm Password *" %>
        <%= f.password_field :password_confirmation %>
        <%= errors_for(:password_confirmation) %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <%= f.label :avatar, "Add a profile picture" %>
        <%= f.file_field :avatar, class: "inline" %>
      </div>
    </div>

    <br />
    <br />

    <div class="row">
      <div class="large-6 columns">
        <%= f.submit "Sign up", class: "large button expand" %>
      </div>
    </div>

    <% end %>
  </div>
</div>

<%= content_for :head do %>
<script src="http://maps.googleapis.com/maps/api/js?libraries=places&amp;sensor=false"></script>
<% end %>