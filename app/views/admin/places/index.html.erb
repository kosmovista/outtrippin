<div class="row">
  <div class="large-10 large-offset-2 columns">
    <h1>Places</h1>
  </div>
</div>

<div class="row">
  <div class="large-2 columns">
    <%= render 'layouts/parts/admin_menu' %>
  </div>

  <div class="large-10 columns">
    <table style="width:100%">
      <thead>
        <tr>
          <th>Name</th>
          <th>Pitches Count</th>
        </tr>
      </thead>
      <tbody>
        <% @places.each do |p| %>
        <tr>
          <td><%= p.name %></td>
          <td><%= p.pitches.count %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>